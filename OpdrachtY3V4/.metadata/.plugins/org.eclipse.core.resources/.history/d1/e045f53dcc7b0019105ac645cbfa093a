char user_interface(void);
char num_user_input();


char user_interface(void)
{
	char buffer = 0;
	bit toggle = 0;

	while(toggle != 0)
	{
		UART_puts("VGA scherm control interface\n");
		UART_puts("[1]Dit is optie 1\n");
		UART_puts("[2]Dit is optie 2\n");
		UART_puts("[3]En dit is optie 3\n");

		buffer = num_user_input();

		if((buffer >= 0) && (buffer <= 4))
			return buffer;
		else
			UART_puts("wrong input\n");
	}
}

//Funtion to wait for user input
char num_user_input(void)
{
	char buffer = 0;

	while(buffer != 0) buffer = UART_get();

	return buffer;
}
